# build stage 
FROM gradle:8.5.0-jdk17 as builder
WORKDIR /app
ADD --chown=gradle:gradle /app /app
EXPOSE 7777
ENV API_KEY="${{secrets.API_KEY}}"
RUN chmod a+x ./gradlew
RUN ./gradlew build

# final stage
FROM openjdk:17-ea-17-oracle
ENV API_KEY="${{secrets.API_KEY}}"
RUN mkdir /app
COPY --from=builder /app/build/libs/*.jar /app/CryptoCurrencyWalletManager.jar
EXPOSE 7777
ENTRYPOINT ["java", "-cp", "/app/CryptoCurrencyWalletManager.jar", "bg.sofia.uni.fmi.mjt.cryptowallet.CryptoClient"]
